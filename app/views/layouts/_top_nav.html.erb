<div id="myModal" class="modal fade" role="dialog">
  <div class=" text-center modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Register as:</h4>
      </div>
      <div class="modal-body">
        <a href = "/users/worker" class="btn btn-primary worker" role="button">Worker</a> or
        <a href = "/users/restaurant" class="btn btn-primary restaurant" role="button">Restaurant Owner</a>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
