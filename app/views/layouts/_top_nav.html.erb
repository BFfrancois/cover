<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" 
              class="navbar-toggle collapsed" 
              data-toggle="collapse" 
              data-target="#navbar" 
              aria-expanded="false" 
              aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <% if current_user %>
        <a class="navbar-brand" href="/jobs">Cover</a>
      <% else %>
        <a class="navbar-brand" href="/">Cover</a>
      <% end %>
    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <% if current_user %>   
        <div class="col-sm-3 col-md-3">
          <%= form_tag(jobs_path, method: :get, class: "navbar-form") do %>
            <%= text_field_tag :search, params[:search], class: "form-control", placeholder: "Search" %>
          <% end %>
        </div>

        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" 
               class="dropdown-toggle" 
               data-toggle="dropdown" 
               role="button" 
               aria-haspopup="true" 
               aria-expanded="false">
              You are Signed in, <%= current_user.first_name %>
              <span class="caret"></span>
              <ul class="dropdown-menu">
                <li><a href="/users/<%= current_user.id %>">Profile</a></li>
                <li><a href="/jobs">Job Posts</a></li>
